# Production Environment Configuration
NODE_ENV=production

# Production Server
PORT=3000

# Production API Base URL
VITE_API_BASE=https://oracles.africa/api

# Production Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=production_orders
DB_USER=postgres
# DB_PASSWORD=managed_by_secrets_manager

# Production Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=30000
DB_STATEMENT_TIMEOUT=30000

# SSL Configuration (for production)
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false

# Production Security
# JWT_SECRET=managed_by_secrets_manager

# Timezone Configuration
TZ=Africa/Johannesburg
DB_TIMEZONE=Africa/Johannesburg

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM SAST
BACKUP_RETENTION_DAYS=30