{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp",
        "--headless",
        "--host", "localhost",
        "--port", "3001",
        "--isolated",
        "--caps", "vision",
        "--output-dir", "./playwright-test",
        "--save-trace"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}