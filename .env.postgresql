# PostgreSQL Environment Configuration
# Copy to .env for production use

# Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=production_orders
DB_USER=postgres
DB_PASSWORD=prodapp123

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=30000
DB_STATEMENT_TIMEOUT=30000

# SSL Configuration (for production)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true
# DB_SSL_CA=path/to/ca-certificate.crt
# DB_SSL_CERT=path/to/client-cert.crt
# DB_SSL_KEY=path/to/client-key.key

# Server Configuration
PORT=3000
JWT_SECRET=your_jwt_secret_here
NODE_ENV=production

# Timezone Configuration
TZ=Africa/Johannesburg
DB_TIMEZONE=Africa/Johannesburg

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM SAST
BACKUP_RETENTION_DAYS=30