# Development Environment Configuration
NODE_ENV=development

# Development Server Ports
PORT=3001
VITE_PORT=5173

# Development API Base URL
VITE_API_BASE=https://dev.oracles.africa/api

# Development Database (same as production for consistency)
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=production_orders
DB_USER=postgres

# Development Pool Settings (smaller for dev)
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# Development SSL (disabled for local)
DB_SSL=false

# Timezone Configuration
TZ=Africa/Johannesburg
DB_TIMEZONE=Africa/Johannesburg